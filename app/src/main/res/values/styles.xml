<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar" parent="@style/Widget.Material3.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="scrimBackground">@color/white</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="liftOnScroll">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/blue_50</item>
        <item name="backgroundTint">@color/blue_400</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_input_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_normal</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="DropdownMenu" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/text_input_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="materialThemeOverlay">@style/DropdownMenu.Overlay</item>
    </style>

    <style name="DropdownMenu.Overlay" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="colorSurface">@color/text_input_grey</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.Material3.TextInputEditText.FilledBox</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_400</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="elevation">0dp</item>
        <item name="android:height">60dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.BodyTextStyle</item>
        <item name="shapeAppearance">@style/MaterialAlertDialog.ShapeAppearance</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MaterialAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialAlertDialog.BodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="MaterialAlertDialog.ShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_normal</item>
    </style>

    <style name="BottomAppBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/bottom_navigation_foreground</item>
        <item name="itemTextColor">@color/bottom_navigation_foreground</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemActiveIndicatorStyle">@style/BottomAppBar.Indicator</item>
    </style>
    
    <style name="BottomAppBar.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_50</item>
    </style>

    <style name="Chip" parent="Widget.Material3.Chip.Input">
        <item name="chipMinHeight">32dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">@dimen/radius_normal</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>