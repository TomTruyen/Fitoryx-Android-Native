<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitoryxNative" parent="Theme.Material3.DayNight">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Action bar style. -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <!-- Text input style -->
        <item name="textInputStyle">@style/TextInputLayout</item>
        <!-- Button style -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <!-- AlertDialog (Material) Style -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <!-- BottomAppbar Styles -->
        <item name="bottomNavigationStyle">@style/BottomAppBar</item>
    </style>
</resources>