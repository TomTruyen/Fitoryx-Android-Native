<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitoryxNative" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Action bar style. -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/design_default_color_background</item>
        <item name="background">@color/design_default_color_background</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_normal</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/blue_gradient</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="elevation">0dp</item>
        <item name="android:height">50dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>